{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('css/login.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey }}
        </div>
    {% endif %}
    <div class="formulaire">
        <img src="{{ asset('images/logo.png') }}">
        <h2>CONNECTEZ VOUS</h2>
    <form action="{{ path('security_login') }}" method="post">


        <input type="text" class="input" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Pseudo"/>
        <br>
        <input type="password" class="input" id="password" name="_password" class="form-control" placeholder="Mot de passe" />
        <br>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
        <button type="submit" class="connexion">Connexion</button><br><br>

        <a href="{{ path('user_registration') }}" class="lien"> Pas encore inscrit ?</a>
        <br>
        <a href="{{ path('request_resetting') }}" class="lien">Mot de passe oubli√© ?</a>
    </form>
    </div>
{% endblock %}