{# resetting/mail.html.twig #}
{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('css/login.css') }}" rel="stylesheet">
{% endblock %}
{% block title %}Renouvellement de mot de passe {% endblock %}
{% block body %}
    <div class="formulaire">
    <img src="{{ asset('images/logo.png') }}">
    <h2>Renouvellement de mot de passe</h2>
<p>
    Bonjour, <br>
    Cliquez sur ce lien pour changer votre mot de passe.
    {# pour que le lien fonctionne, il est indispensable que le lien soit absolu. #}
    <a href="{{absolute_url(path('resetting', {'id': user.id, 'token': user.token}))}}" class="lien">Changer le mot de passe</a>
</p>
    </div>
{% endblock %}