<div class="row">
    <div class="col-sm-4">
        <div class="row">
            <div class="col-sm-12">{% for jeton in partie.jetonsTerrain.arme %}
                    <img src="{{ asset('jetons/'~jetons[jeton].fichier) }}" height="75px" />
                {% endfor %}</div>
            <div class="col-sm-12">{% for jeton in partie.jetonsTerrain.telephone %}
                    <img src="{{ asset('jetons/'~jetons[jeton].fichier) }}" height="75px" />
                {% endfor %}</div>
            <div class="col-sm-12">
                {% for jeton in partie.jetonsTerrain.drogue %}
                    <img src="{{ asset('jetons/'~jetons[jeton].fichier) }}" height="75px" />
                {% endfor %}
            </div>
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-sm-4">
                        {% for jeton in partie.jetonsTerrain.Bonus_3 %}
                            {% if loop.first %}
                                <img src="{{ asset('jetons/'~jetons[jeton].fichier) }}" height="75px"/>
                            {% endif %}

                        {% endfor %}
                        {{ partie.jetonsTerrain.Bonus_3|length }}
                    </div>
                    <div class="col-sm-4">
                        {% for jeton in partie.jetonsTerrain.Bonus_4 %}
                            {% if loop.first %}
                                <img src="{{ asset('jetons/'~jetons[jeton].fichier) }}" height="75px"/>
                            {% endif %}

                        {% endfor %}
                        {{ partie.jetonsTerrain.Bonus_4|length }}
                    </div>
                    <div class="col-sm-4">
                        {% for jeton in partie.jetonsTerrain.Bonus_5 %}
                            {% if loop.first %}
                                <img src="{{ asset('jetons/'~jetons[jeton].fichier) }}" height="75px"/>
                            {% endif %}

                        {% endfor %}
                        {{ partie.jetonsTerrain.Bonus_5|length }}
                    </div>
                </div>
            </div>
            <div class="col-sm-10">
                {% for jeton in partie.jetonsTerrain.alcool %}
                    <img src="{{ asset('jetons/'~jetons[jeton].fichier) }}" height="75px" />
                {% endfor %}
            </div>
            <div class="col-sm-10">
                {% for jeton in partie.jetonsTerrain.cigarette %}
                    <img src="{{ asset('jetons/'~jetons[jeton].fichier) }}" height="75px" />
                {% endfor %}
            </div>
            <div class="col-sm-10">
                {% for jeton in partie.jetonsTerrain.nourriture %}
                    <img src="{{ asset('jetons/'~jetons[jeton].fichier) }}" height="75px" />
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="row">
            <div class="col-sm-10" style="height: 150px">
                {% for carte in partie.mainJ2 %}
                    <img src="{{ asset('cartes/carte_dos.jpg') }}" height="100px" />
                {% endfor %}
            </div>
            <div class="col-sm-10" style="height: 150px">
                {% for carte in partie.chameauxJ2 %}
                    <img src="{{ asset('cartes/'~cartes[carte].fichier) }}" height="100px" />
                {% endfor %}
            </div>
            <div class="col-sm-10" style="height: 150px">
                <div class="row">
                    <div class="col-sm-2">{% if partie.pioche|length >0 %}<img src="{{ asset('cartes/carte_dos.jpg') }}" height="100px"  />{% else %}Vide{% endif %}<p>Pioche {{ partie.pioche|length }}</p></div>
                    <div id="terrain" class="row">
                        {% for carte in partie.terrain %}
                            <div class="col-sm-2" id="carte-{{ carte }}"><img src="{{ asset('cartes/'~cartes[carte].fichier) }}" height="100px" class="carteterrain {% if cartes[carte].valeur == 0 %}Larbin {% else %}Marchandises{% endif %}"  data-carte="{{ carte }}" /></div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="col-sm-10" style="height: 150px">
                <div id="chamain" class="row">
                {% for carte in partie.chameauxJ1 %}
                    <img src="{{ asset('cartes/'~cartes[carte].fichier) }}" class="cartechameau" height="100px" data-carte="{{ carte }}" />
                {% endfor %}
                </div>
            </div>
            <div class="col-sm-10 mainJ1" style="height: 150px">Mes cartes<br>
                <div id="main" class="row">
                {% for carte in partie.mainJ1 %}
                    <img src="{{ asset('cartes/'~cartes[carte].fichier) }}" class="cartemain" height="100px" data-carte="{{ carte }}" />
                {% endfor %}
                </div>
            </div>
        </div>
        <div class="row" id="bloc-action">
            <div class="col-sm-4">
                <button class="btn btn-block btn-info" id="action-prendre">Prendre</button>
            </div>
            <div class="col-sm-4">
                <button class="btn btn-block btn-danger" id="action-vendre">Vendre</button>
            </div>
            <div class="col-sm-4">
                <button class="btn btn-block btn-warning" id="action-troquer">Troquer</button>
            </div>
        </div>
        <div class="row" id="bloc-suivant" style="display:none">
            <button class="btn btn-block btn-success" id="action-terminer">Terminer mon tour</button>
        </div>
    </div>
</div>
